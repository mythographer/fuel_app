= form_for waybill do |f|
  = render partial: 'shared/error_messages', locals: { object: @waybill }

  = f.label :id
  = f.text_field :id, disabled: true, class: 'form-control'

  = f.label :doc_no
  = f.text_field :doc_no, class: 'form-control'

  = f.label :initial_date
  = f.text_field :initial_date, class: 'form-control'

  = f.label :final_date
  = f.text_field :final_date, class: 'form-control'

  = f.label :vehicle_id
  = f.text_field :vehicle_id, class: 'form-control'

  = f.label :initial_mileage
  = f.text_field :initial_mileage, class: 'form-control'

  = f.label :final_mileage
  = f.text_field :final_mileage, class: 'form-control'

  = f.label :initial_fuel
  = f.text_field :initial_fuel, class: 'form-control'

  = f.label :final_fuel
  = f.text_field :final_fuel, class: 'form-control'

  = f.label :comment
  = f.text_area :comment, class: 'form-control'

  = f.submit yield(:button_text), class: 'btn btn-primary'
