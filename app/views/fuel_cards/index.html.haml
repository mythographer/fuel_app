%h1= t '.header'

%p= link_to t('.new'), new_fuel_card_path

= will_paginate @fuel_cards

%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th ID
      %th= @fuel_cards.human_attribute_name :card_no 
      %th= @fuel_cards.human_attribute_name :brand_name
      %th= @fuel_cards.human_attribute_name :status_name
      %th= @fuel_cards.human_attribute_name :notes
      %th{colspan: 2}
  %tbody
    - @fuel_cards.each do |fuel_card|
      %tr
        %td= link_to fuel_card.id, edit_fuel_card_path(fuel_card)
        %td= fuel_card.card_no
        %td= fuel_card.brand_name
        %td= fuel_card.status_name
        %td= fuel_card.notes
        %td= link_to t(:show), fuel_card_path(fuel_card)
        %td= link_to t(:destroy), fuel_card_path(fuel_card),
          method: :delete, data: { confirm: t(:are_you_sure?) }

= will_paginate @fuel_cards
